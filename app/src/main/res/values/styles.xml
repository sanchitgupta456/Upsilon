<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorGrey</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customisations -->
        <item name="android:colorButtonNormal">@color/colorYellow</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="floatingActionButtonStyle">@style/FloatingButtonStyle</item>
        <item name="extendedFloatingActionButtonStyle">@style/ExtendedFloatingButtonStyle</item>
        <item name="textInputStyle">@style/TextStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:elevation">0dp</item>
        <item name="drawableTint">@color/colorWhite</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="AppTheme.Green" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarStyle.Green</item>
        <item name="colorPrimary">#00C896</item>
        <item name="colorPrimaryDark">#112E2E</item>
        <item name="colorAccent">#85F3CC</item>
    </style>

    <style name="ActionBarStyle.Green" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">#112E2E</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="Widget.AppTheme.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="exampleColor">@color/light_blue_400</item>
    </style>

    <!--    <style name="CustomTextInputLayout">-->
    <!--        <item name="colorAccent">@color/colorPrimary</item>-->
    <!--        &lt;!&ndash; rest also we will add, if need be &ndash;&gt;-->
    <!--    </style>-->


    <!-- Material theme customisations -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/button_green</item>
        <item name="rippleColor">@color/ripple_green</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:letterSpacing">0.3</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="StrokeButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorWhite</item>
        <item name="strokeColor">@color/button_green</item>
        <item name="strokeWidth">1dp</item>
        <item name="rippleColor">@color/ripple_green</item>
        <item name="android:textColor">@color/button_green</item>
        <item name="android:letterSpacing">0</item>
        <item name="elevation">8dp</item>
        <item name="drawableTint">@color/button_green</item>
    </style>

    <style name="FloatingButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/button_green</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="rippleColor">@color/ripple_green</item>
    </style>
    <style name="ExtendedFloatingButtonStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="backgroundTint">@color/button_green</item>
        <item name="iconTint">@color/colorWhite</item>
        <item name="rippleColor">@color/ripple_green</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>